{% extends 'base.html.twig' %} {# "Herencia" si una template hereda, tot el seu contingut ha d'estar dins un block#}

{% block stylesheets %}

    {{ parent()}}
    <link rel="stylesheet" href="{{ asset('css/user/index.css') }}">

{% endblock %}

{% block content %}
    <header class="w3-center">
    </header>

    <div class="detallet">
      <p></p>
    </div>

<div class ="w3-card-4 w3-white userlog">

    <div class="w3-light-grey w3-text-gray" >
        <button id="EntrarTab" class="w3-bar-item w3-button tablink" onclick="openUsuari(event, 'Entrar')">Entrar</button>
        <button id="RegstreTab" class="w3-bar-item w3-button tablink" onclick="openUsuari(event, 'Registre')">Registrar-se</button>
    </div>

    <div id="Registre" class="usuari" style="display:none">

         <br>

        <div class="w3-container">

            <form action="/action_page.php"> <!-- Posar la pagina que hem d'anar quan cliquem boto registre -->

            <div class="w3-container w3-pale-red w3-round">
                <h4>Dades Personals</h4>
            </div>

                <div class = "form-content">
                    <label class="w3-text-black"><b>Nom</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Nom" name="Nom">

                    <label class="w3-text-black"><b>Cognoms</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Cognoms" name="Cognoms">

                    <label class="w3-text-black"><b>Telèfon</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Telèfon" nome="Tel">

                    <label class="w3-text-black"><b>Mòbil</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Mòbil" name="Mobil">
                </div>

                <br>

            <div class="w3-container w3-pale-red w3-round">
                <h4>Direcció</h4>
            </div>

                <div class="form-content">
                    <label class="w3-text-black"><b>Adreça</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Adreça" name="Adreca">

                    <label class="w3-text-black"><b>Ciutat/Poble</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Ciutat/Poble" name="CiPo">

                    <label class="w3-text-black"><b>Codi Postal</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Codi Postal" name="CP">


                    <label class="w3-text-black"><b>País</b></label>
                    <select class="w3-select w3-border w3-border-pale-red w3-hover-border-purple w3-round" name="option">
                        <option value="" disabled selected>---</option>
                        <option value="1">Alemanya</option>
                        <option value="2">Catalunya</option>
                        <option value="3">Regne unit</option>
                    </select>
                </div>

                    <br>

            <div class="w3-container w3-pale-red w3-round">
                <h4>Dades d'usuari</h4>
            </div>

                <div class="form-content">
                    <label class="w3-text-black"><b>E-Mail</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="E-Mail" name="mail">

                    <label class="w3-text-black"><b>Contrassenya</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Contrassenya" name="contr">

                    <label class="w3-text-black"><b>Repeteix la contrassenya</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Repeteix la contrassenya" name="RepContr">

                </div>

                <br>

            <div class="w3-container w3-pale-red w3-round">
                <h4>Vols rebre informació per email?</h4>
            </div>

                <div class="form-content">
                    <input class="w3-radio" type="radio" name="bool" value="yes" checked>
                    <label>SI</label>

                    <br>

                    <input class="w3-radio" type="radio" name="bool" value="no">
                    <label>NO</label>

                    <br>

                    <input class="w3-radio" type="radio" name="gender" value="" disabled>
                    <label>exemple de desabilitar (Disabled)</label>
                </div>

                <br>

                <button class="w3-btn w3-pale-red w3-round">Registrar-se</button>

                <br>
                <br>

            </form>
        </div>
    </div>

    <div id="Entrar" class="usuari">

        <br>

         <div class="w3-container">

            <form action="/action_page.php"> <!-- Posar la pagina que hem d'anar quan cliquem boto registre -->

                <div class = "form-content">
                    <label class="w3-text-black"><b>Usuari</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="ex.: raquel@mail.com" name="mailU">

                     <label class="w3-text-black"><b>Contrassenya</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="****" name="contrassenyaU">
                </div>

                <br>

                <button class="w3-btn w3-pale-red w3-round">Entrar</button>
                <br>
                <br>

             </form>

    </div>

</div>









{% endblock %}

{% block javascripts %}
    {{ parent() }} {# Afegeix el contingut del block del parent, així, podem afegir scripts concrets només per aquesta template sense sobrescriure els del pare#}
    <script src="{{ asset('js/user/user.js') }}"></script>
{% endblock %}