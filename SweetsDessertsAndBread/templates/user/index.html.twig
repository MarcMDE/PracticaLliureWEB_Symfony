{% extends 'base.html.twig' %} {# "Herencia" si una template hereda, tot el seu contingut ha d'estar dins un block#}

{% block stylesheets %}

    {{ parent()}}
    <link rel="stylesheet" href="{{ asset('css/user/index.css') }}">

{% endblock %}

{% block content %}
    <header class="w3-center">
    </header>

        <div class="w3-container">

            <form action="/action_page.php"> <!-- Posar la pagina que hem d'anar quan cliquem boto registre -->

            <div class="w3-container w3-pale-red w3-round">
                <h4>Dades Personals</h4>
            </div>

                <div class = "form-content">
                    <label class="w3-text-black"><b>Nom</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Nom" name="Nom">

                    <label class="w3-text-black"><b>Cognoms</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Cognoms" name="Cognoms">

                    <label class="w3-text-black"><b>Telèfon</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Telèfon" nome="Tel">

                    <label class="w3-text-black"><b>Mòbil</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Mòbil" name="Mobil">
                </div>


            <div class="w3-container w3-pale-red w3-round">
                <h4>Direcció</h4>
            </div>

                <div class="form-content">
                    <label class="w3-text-black"><b>Adreça</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Adreça">

                    <label class="w3-text-black"><b>Ciutat/Poble</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Ciutat/Poble">

                    <label class="w3-text-black"><b>Codi Postal</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Codi Postal">


                    <label class="w3-text-black"><b>País</b></label>
                    <select class="w3-select w3-border w3-border-pale-red w3-hover-border-purple w3-round" name="option">
                        <option value="" disabled selected>---</option>
                        <option value="1">Alemanya</option>
                        <option value="2">Catalunya</option>
                        <option value="3">Regne unit</option>
                    </select>
                </div>



            <div class="w3-container w3-pale-red w3-round">
                <h4>Dades d'usuari</h4>
            </div>

                <div class="form-content">
                    <label class="w3-text-black"><b>E-Mail</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="E-Mail">

                    <label class="w3-text-black"><b>Contrassenya</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Contrassenya">

                    <label class="w3-text-black"><b>Repeteix la contrassenya</b></label>
                    <input class="w3-input w3-border w3-border-pale-red w3-hover-border-purple w3-round" type="text" placeholder="Repeteix la contrassenya">

                    <button class="w3-btn w3-pale-red w3-round">Registrar-se</button>

                    <input class="w3-radio" type="radio" name="gender" value="male" checked>
                    <label>Home</label>

                    <input class="w3-radio" type="radio" name="gender" value="female">
                    <label>Dona</label>

                    <input class="w3-radio" type="radio" name="gender" value="" disabled>
                    <label>exemple de desabilitar (Disabled)</label>
                </div>

            </form>

        </div>






{% endblock %}

{% block javascripts %}
    {{ parent() }} {# Afegeix el contingut del block del parent, així, podem afegir scripts concrets només per aquesta template sense sobrescriure els del pare#}
    <script src="{{ asset('js/example.js') }}"></script>
{% endblock %}