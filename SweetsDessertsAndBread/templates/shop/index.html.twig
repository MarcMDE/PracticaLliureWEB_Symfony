{% extends 'base.html.twig' %} {# "Herencia" si una template hereda, tot el seu contingut ha d'estar dins un block#}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/shop/index.css') }}">
{% endblock %}

{% block content %}
    <header class="w3-center">
        <h2>{{ title }}</h2>
    </header>

    <div class="flex-container products-flexbox">
        {% for producte in productes %}
            <div class="products-flexbox-item">
                <a href="{{ path('shop_detail', {id:producte.id}) }}">
                    <img src="{{ asset(producte.getArxiuImatgePrincipal()) }}" class="w3-border" alt="Producte">
                    <div class="producte-data">
                        <div class="producte-nom"><p>{{ producte.nom }}</p></div>
                        {% if producte.enOferta %}
                            <div class="producte-preu preu-oferta">{{ producte.preuOferta|number_format(2, ',') }} €</div>
                        {% else %}
                            <div class="producte-preu">{{ producte.preu|number_format(2, ',') }} €</div>
                        {% endif %}
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>

